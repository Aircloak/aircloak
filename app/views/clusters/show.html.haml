%p#notice= notice

%p
  %b Name:
  = @cluster.name
%p
  %b TPM:
  = @cluster.tpm
%p
  %b Using build:
  = @cluster.build.name
%p
  %b Health:
  = @cluster.health
%p
  %b Attached cloaks:
  %ul
    - @cluster.cloaks.each do |cloak|
      %li
        = cloak.name
        %em= "(#{cloak.good ? :ok : :broken})"

