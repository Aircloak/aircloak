%h1= "Audit log for #{@cloak.name}"

= link_to "See log entries for the #{@cloak.cluster.name} cluster, which #{@cloak.name} is part of", "/audit_logs/cluster/#{@cloak.cluster.id}" if @cloak.cluster

- if @entries.size > 0
  %table.table.table-striped
    %thead
      %tr
        %th Entry id
        %th Verified
        %th Timestamp
        %th Source
        %th Message
        %th
    %tbody
      - @entries.each do |log_entry|
        %tr
          %td= log_entry.log_id
          %td= log_entry.verified
          %td= log_entry.timestamp
          %td= log_entry.source
          %td= log_entry.message
          %td= link_to 'Raw entry', audit_log_path(log_entry), class: "btn btn-mini"
  = will_paginate @entries

- else
  %h4 No audit-log entries as of yet
