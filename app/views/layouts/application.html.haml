!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{:'http-equiv' => "X-UA-Compatible", content:"IE=Edge,chrome=1"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : "Aircloak"
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
  
  %body
    .container
      .content
        .row
          .span12
            .navbar.navbar-fixed-top
              .navbar-inner
                .brand &nbsp;Aircloak admin
                %ul.nav
                  %li= link_to "Queries", queries_path
                  %li= link_to "Client binaries", client_binaries_path
                  %li= link_to "Existing commands", commands_path
                  %li= link_to "Staging machines", staging_machines_path
                  %li= link_to "Deployment groups", deployment_groups_path
                %ul.nav.pull-right
                  - if current_user
                    %li= link_to "Logged in as #{current_user.login}", user_path(current_user)
                    %li= link_to "Logout", logout_path
                  - else
                    %li= link_to "Login", login_path
                    %li= link_to "Register", new_user_path
          - if flash[:error]
            .alert.alert-error
              %button.close{type:"button", :'data-dismiss'=>"alert"} &times;
              = flash[:error]
          - if flash[:notice]
            .alert.alert-success
              %button.close{type:"button", :'data-dismiss'=>"alert"} &times;
              = flash[:notice]
          %div
            = yield
    = javascript_include_tag "application", "data-turbolinks-track" => true
