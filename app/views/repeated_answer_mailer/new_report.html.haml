!!!
%html
  %head
    %meta{'content' => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}
  %body
    %h1= "Repeated answers detected for analyst #{@report.analyst.name} on cluster #{@report.cluster.name}"

    %ul
      %li= "task started from #{@report.source_ip} at #{@report.timestamp_in_UTC}"
      %li= "bucket #{@report.bucket_label_and_value} with noisy-count #{@report.bucket_count}"
      %li= "noise standard devication #{@report.noise_sd}"
      %li= "there are #{RepeatedAnswer.where(resolved: false).count} unresolved reports in total"

    - if @not_trustworthies.count > 0
      %h2 Generated by the tasks
      %table.table.table-striped
        %tbody
          - @not_trustworthies.each do |task_code|
            %tr
              %td Task:
              %td
                %table.table.table-striped
                  %tr
                    %td Prefetch
                    %td
                      %pre= task_code.prefetch
                  - task_code.ra_library_code_ra_task_codes.each do |connector|
                    - library_code = connector.ra_library_code
                    %tr
                      %td= "Library: #{connector.name}"
                      %td
                        %pre= library_code.code
                  %tr
                    %td Code
                    %td
                      %pre= task_code.code

    - if @trustworthies.count > 0
      %h2 Generated by trustworthy tasks
      %table.table.table-striped
        %tbody
          - @trustworthies.each do |task_code|
            %tr
              %td Task:
              %td
                %table.table.table-striped
                  %tr
                    %td Prefetch
                    %td
                      %pre= task_code.prefetch
                  - task_code.ra_library_code_ra_task_codes.each do |connector|
                    - library_code = connector.ra_library_code
                    %tr
                      %td= "Library: #{connector.name}"
                      %td
                        %pre= library_code.code
                  %tr
                    %td Code
                    %td
                      %pre= task_code.code
