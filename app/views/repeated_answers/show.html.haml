%h1= "Repeated Answer at #{@answer.timestamp_in_UTC} (UTC)"

%table.table.table-striped
  %tbody
    %tr
      %td Resolved?
      %td= @answer.resolved
    %tr
      %td Source IP
      %td= @answer.source_ip
    %tr
      %td Bucket Label and Value
      %td= @answer.bucket_label_and_value
    %tr
      %td Bucket Count
      %td= @answer.bucket_count
    %tr
      %td Noise Standard Deviation
      %td= @answer.noise_sd

- if @not_trustworthies.count > 0
  %h2 Generated by the tasks
  %table.table.table-striped
    %tbody
      - @not_trustworthies.each do |task_code|
        %tr
          %td
            %span.label.label-default Task:
          %td
            %table.table.table-striped
              %tr
                %td
                  %span.label.label-important Prefetch
                %td
                  %pre= task_code.prefetch
              - task_code.ra_library_code_ra_task_codes.each do |library_connector|
                - library_code = library_connector.ra_library_code
                %tr
                  %td
                    - if library_code.belongs_to_trustworthy_code
                      %span.label.label-warning Library:
                    - else
                      %span.label.label-important Library:
                    = library_connector.name
                  %td
                    %pre= library_code.code
              %tr
                %td
                  %span.label.label-important Code
                %td
                  %pre= task_code.code
              %tr
                %td Is trustworthy?
                %td
                  .form-container
                    = form_for task_code do |f|
                      .control-group
                        .controls
                          = f.submit 'Yes', :class => "btn btn-success"

- if @trustworthies.count > 0
  %h2 Generated by trustworthy tasks
  %table.table.table-striped
    %tbody
      - @trustworthies.each do |task_code|
        %tr
          %td
            %span.label.label-default Task:
          %td
            %table.table.table-striped
              %tr
                %td
                  %span.label.label-success Prefetch
                %td
                  %pre= task_code.prefetch
              - task_code.ra_library_code_ra_task_codes.each do |library_connector|
                - library_code = library_connector.ra_library_code
                %tr
                  %td
                    %span.label.label-success Library:
                    = library_connector.name
                  %td
                    %pre= library_code.code
              %tr
                %td
                  %span.label.label-success Code
                %td
                  %pre= task_code.code

- if not @answer.resolved
  .form-container
    = form_for @answer do |f|
      .control-group
        .controls
          = f.submit 'Resolve', :class => "btn btn-success"
