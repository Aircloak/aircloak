- if permitted_to? :read, :queries
  %h1 Queries

  - unless @queries.count == 0
    %p Select a property you want to see

    - @queries.each do |query|
      %h2= query.name
      - unless query.properties.count == 0
        %ul
          - query.properties.each do |p|
            %li
              = p.property
              %ul
                - p.property_results.each do |result|
                  %li= "str: #{result.str_value}, num: #{result.long_value} (#{result.count})"
      - else
        %p No properties to report.
      - unless query.percentiles.count == 0
        %ul
          - query.percentiles.each do |p|
            %li
              = p.bucket
              %ul
                - p.percentile_results.each do |result|
                  %li= "values: #{result.raw_values}"
      - else
        %p No petercentils to report.

  - else
    %p There are no queries to show results from.
    = link_to "Manage queries", queries_path, class: "btn" if permitted_to? :manage, :queries
