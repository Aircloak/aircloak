%h1 Listing queries

%table
  %thead
    %tr
      %th Name
      %th Running on behalf of
      %th Index
      %th # Query files
      %th
      %th
  %tbody
  - @queries.each do |query|
    %tr
      %th= query.name
      %th= query.on_behalf_of
      %th= query.index ? query.index.human_name : "unnamed index"
      %th= query.query_files.count
      %td= link_to 'Edit', edit_query_path(query)
      %td= link_to 'Destroy', query, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Query', new_query_path
