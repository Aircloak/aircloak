%h1 Registered file types

%table.table.table-condensed
  %thead
    %tr
      %th Name
      %th Extension
      - if permitted_to? :update, :client_file_types
        %th
      - if permitted_to? :delete, :client_file_types
        %th

  %tbody
    - @client_file_types.each do |cft|
      %tr
        %td= cft.human_name
        %td= cft.extension
        - if permitted_to? :update, :client_file_types
          %td= link_to 'Edit', edit_client_file_type_path(cft)
        - if permitted_to? :delete, :client_file_types
          %td
            - if cft.can_destroy?
              = link_to 'Remove', cft, :method => :delete, :data => { :confirm => 'Are you sure?' }
            - else
              Can't be destroyed. In use

%br

= link_to 'New Client file type', new_client_file_type_path, class: "btn" if permitted_to? :create, :client_file_types
= link_to 'Add file', new_client_file_path, class: "btn" if permitted_to? :create, :client_files
