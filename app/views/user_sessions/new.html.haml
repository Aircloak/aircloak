.form-container
  = form_for @user_session, html: {class: "form-horizontal"} do |f|
    .control-group
      .controls
        %img{src: "/images/aircloak_web_200.png"}

    - if @user_session.errors.any?
      #error_explanation
        %h2= "Login failed with #{pluralize(@user_session.errors.count, "error")}:"
        %ul
          - @user_session.errors.full_messages.each do |msg|
            %li= msg

    .control-group
      = control_label "Login"
      .controls
        = f.text_field :login
    .control-group
      = control_label "Password"
      .controls
        = f.password_field :password
    .control-group
      = control_label ""
      .controls
        %label.checkbox
          = f.check_box :remember_me
          Remember me
    .control-group
      .controls
        = f.submit 'Login', class: "btn btn-success"
