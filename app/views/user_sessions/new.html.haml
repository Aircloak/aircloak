%h1 Login

.form-container
  = form_for @user_session, html: {class: "form-horizontal"} do |f|
    - if @user_session.errors.any?
      #error_explanation
        %h2= "Login failed with #{pluralize(@user_session.errors.count, "error")}:"
        %ul
          - @user_session.errors.full_messages.each do |msg|
            %li= msg

    .control-group
      %label.control-label
        Login
        = help_tooltip "login"
      .controls
        = f.text_field :login
    .control-group
      %label.control-label
        Password
        = help_tooltip "password"
      .controls
        = f.password_field :password
    .control-group
      %label.control-label
        = help_tooltip "remember_me"
      .controls
        %label.checkbox
          = f.check_box :remember_me
          Remember me
    .control-group
      .controls
        = f.submit 'Login', class: "btn btn-success"
