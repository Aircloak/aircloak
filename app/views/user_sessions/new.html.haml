%h1 Login

.form-container
  = form_for @user_session, html: {class: "form-horizontal"} do |f|
    - if @user_session.errors.any?
      #error_explanation
        %h2= "#{pluralize(@user_session.errors.count, "error")} prohibited this client_file from being saved:"
        %ul
          - @user_session.errors.full_messages.each do |msg|
            %li= msg

    .control-group
      %label.control-label= f.label :login
      .controls
        = f.text_field :login
    .control-group
      %label.control-label= f.label :password
      .controls
        = f.password_field :password
    .control-group
      .controls
        %label.checkbox
          = f.check_box :remember_me 
          Remember me
    .control-group
      .controls
        = f.submit 'Login', class: "btn btn-success"
