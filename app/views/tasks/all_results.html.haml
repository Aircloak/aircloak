%h1= "#{@task.name}: all results"

= link_to "Download results", "#{@results_path}.csv", class: "btn"
= link_to "Delete results", delete_results_task_path(@task.token), :method => :post,
  :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger"

- if @results.count > 0
  = will_paginate @raw_results
  = render 'results'
  = will_paginate @raw_results
- else
  %hr
  %p No results stored for this task.
  %hr

= link_to 'Latest results', latest_results_task_path(@task.token), class: "btn"
= link_to 'Back', tasks_path, class: "btn"
