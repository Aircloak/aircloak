- if cloaks.size > 0 then
  %h1= render_assigned ? "Assigned cloaks" : "Unassigned cloaks"

  %table.table.table-striped
    %thead
      %tr
        %th Name
        %th Ip
        %th Type
        %th Health
        - if render_assigned
          %th Cluster
        %th
        %th
        %th

    %tbody
      - cloaks.each do |cloak|
        %tr
          %td= cloak.name
          %td= cloak.ip
          %td= cloak.tpm_display
          %td= cloak.health
          - if render_assigned
            %td= cloak.cluster.name
          %td= link_to 'Show', cloak
          %td= link_to 'Edit', edit_cloak_path(cloak)
          %td= link_to 'Destroy', cloak, :method => :delete, :data => { :confirm => 'Are you sure?' }
