= form_for @permission, html: {class: "form-horizontal"} do |f|
  - if @permission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@permission.errors.count, "error")} prohibited this permission from being saved:"
      %ul
        - @permission.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = control_label "Name"
    .controls
      = f.text_field :name
  .control-group
    = control_label "Description"
    .controls
      = f.text_field :description
      %span.help-block What does this permission allow a user to do?
  .control-group
    .controls
      = f.submit 'Save', class: "btn btn-success"
