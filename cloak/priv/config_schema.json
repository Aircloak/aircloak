{
  "type": "object",
  "properties": {
    "air_site": {"type": "string", "minLength": 1},
    "salt": {"type": "string", "minLength": 1},
    "cloak_secret": {"type": "string", "minLength": 64},
    "data_sources": {"type": "string", "minLength": 1},
    "debug": {"type": "boolean"},
    "features": {"$comment": "allowed for backward compatibility"},
    "air_socket_url": {"$comment": "allowed for backward compatibility"},
    "concurrency": {"type": "integer", "minimum": 0},
    "connection_keep_time": {"type": "integer", "minimum": 1, "maximum": 86400},
    "lcf_buckets_aggregation_limit": {"type": "integer", "minimum": 0},
    "sanitize_otp_errors": {"type": "boolean"},
    "max_parallel_queries": {"type": "integer", "minimum": 1},
    "liveness_check_interval": {"type": "integer", "minimum": 1},
    "memory_limits": {
      "type": "object",
      "properties": {
        "check_interval": {"type": "integer", "minimum": 1},
        "limit_to_start_checks": {"type": "integer", "minimum": 1},
        "limit_to_check_for": {"type": "integer", "minimum": 1},
        "allowed_minimum_time_to_limit": {"type": "integer", "minimum": 1},
        "time_between_abortions": {"type": "integer", "minimum": 1}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["air_site", "salt", "data_sources"]
}
