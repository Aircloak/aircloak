{sub_dirs, ["rel"]}.
%{cover_enabled, true}. % Disabled because of an Erlang OTP bug, will re-enable in release 18.3
{clean_files, ["*.eunit", "ebin/*.beam"]}.
{eunit_opts, [
  {report, {eunit_progress, [colored]}},
  {report, {eunit_surefire, [{dir, "."}]}}
]}.
{erl_opts, [debug_info]}.
%% edoc preprosessing, while making things slow, is needed in order
%% to allow edoc to process function definitions that use macros.
%% An example is `handle_handoff_command(?FOLD_REQ{...}, _, _)`
%% in query_vnode.erl
{edoc_opts, [{dir, "doc"}, {preprocess, true}]}.
{deps, [
  {lager, "2.0.*", {git, "git://github.com/basho/lager", {tag, "2.0.3"}}},
  {lager_syslog, "2.0.*", {git, "git://github.com/basho/lager_syslog", {tag, "2.0.3"}}},
  {protobuffs, "0.8.*", {git, "git://github.com/basho/erlang_protobuffs", {tag, "0.8.1"}}},
  {gproc, "0.3.*", {git, "git://github.com/uwiger/gproc", {tag, "0.3.1"}}},
  % Provides eunit test results that look more like what one sees when testing
  % in ruby. To use it, please add something like:
  %
  %   {eunit_opts, [
  %     no_tty,  %% This turns off the default output, MUST HAVE
  %     {report, {eunit_progress, [colored]}},
  %     {report, {eunit_surefire, [{dir, "."}]}}
  %   ]}.
  %
  % to your rebar.config.
  {eunit_formatters, ".*", {git, "git://github.com/seancribbs/eunit_formatters", {branch, "master"}}},
  {cloak_metrics, ".*", {git, "git@github.com:Aircloak/cloak-metrics.git", {branch, "develop"}}},
  {ej, "0.*", {git, "git://github.com/seth/ej.git", {branch, "master"}}},
  {webmachine, ".*", {git, "git://github.com/basho/webmachine", {tag, "1.10.6"}}},
  {pgsql, ".*", {git, "git://github.com/semiocast/pgsql"}},
  {meck, ".*", {git, "git://github.com/eproxus/meck", {tag, "0.8.2"}}},
  {proper, "1.1.*", {git, "git@github.com:matthiaskr/proper.git", {branch, "matthiaskr/bugfix/non-proper-lists"}}},
  {erlcron, ".*", {git,"https://github.com/erlware/erlcron", {branch, "master"}}},
  {rebar_lock_deps_plugin, ".*", {git, "git://github.com/seth/rebar_lock_deps_plugin.git", {branch, "master"}}},
  {rebar,".*", {git,"https://github.com/rebar/rebar.git", {branch, "master"}}},
  {rebar_proper_plugin, ".*", {git, "git://github.com/andrzejsliwa/rebar_proper_plugin.git", {branch, "master"}}}
]}.

{plugins, [rebar_proper_plugin, rebar_lock_deps_plugin]}.
{proper_check_spec, [query_vnode_scheduler_batchreaders]}.
