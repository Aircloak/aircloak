upstream frontend {
  {{ range gets "/service_instances/frontends/*" }}
    {{ $data := json .Value }}
    server {{ $data.http_endpoint }};
  {{ end }}
}

upstream backend {
  {{ range gets "/service_instances/backends/*" }}
    {{ $data := json .Value }}
    server {{ $data.http_endpoint }};
  {{ end }}
}

server {
  listen 8200;

  location / {
    proxy_pass http://frontend;
  }

  location /backend {
    proxy_pass http://backend/backend/;
  }

  location /air_sandbox {
    proxy_pass http://backend/;
  }
}
