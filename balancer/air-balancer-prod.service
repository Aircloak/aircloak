[Unit]
Description=Aircloak air_balancer for prod environment, docker driven HAProxy Container
After=docker.service
Requires=docker.service

[Service]
SyslogIdentifier=air-balancer-prod
TimeoutStartSec=0
Environment=AIR_ENV=prod
Environment=BIND_IF=139.19.208.120
Environment=ROUTERS_FILE=routers_prod
ExecStart=/aircloak/air_prod/air/balancer/container.sh foreground
ExecStop=/aircloak/air_prod/air/balancer/container.sh stop

[Install]
WantedBy=multi-user.target
