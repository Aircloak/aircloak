- if @tasks.count > 0
  %h3 Deleted tasks

  %table.table.table-striped
    %thead
      %tr
        %th Name
        - if current_user.has_multiple_clusters?
          %th Cluster
        %th Results
        %th Type
        %th
    %tbody
    - @tasks.each do |task|
      %tr{class: ("error" if task.cluster.nil?)}
        %td= task.name
        - if current_user.has_multiple_clusters?
          - if task.cluster
            %td= task.cluster.name
          - else
            %td NO CLUSTER ASSIGNED
        -if task.purged
          %td{class: "error-text"} purged
        -else
          %td= "#{pluralize(task.results.count, 'result')} will be purged #{task.days_until_purging}"
        %td= task.type_string
        %td
          = link_to 'Recover', recover_task_path(task.token), :method => :post, class: "btn btn-mini"
          \|
          = link_to "Destroy", task_path(task.token), :method => :delete,
            :data => { :confirm => "Are you sure you want to destroy task #{task.name}? This operation can NOT be undone!" }, class: "btn btn-mini btn-danger"
- else
  %h3 No deleted tasks found!

%br
= link_to 'Tasks overview', tasks_path