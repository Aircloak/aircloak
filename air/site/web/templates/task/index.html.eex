<h2>Tasks</h2>
<hr/>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="70%">Name</th>
      <th>Results</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for task <- @tasks do %>
    <tr>
      <td><%= Air.Task.display_name(task) %></td>
      <td align="center"><%= link "#{task.results_count}", to: task_result_path(@conn, :index, task.id) %></td>
      <td class="text-right">
        <%= link "Edit", to: task_path(@conn, :edit, task), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: task_path(@conn, :delete, task), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New task", to: task_path(@conn, :new) %>
