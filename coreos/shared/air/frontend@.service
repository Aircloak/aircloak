[Unit]
Description=Air frontend
After=etcd.service
After=docker.service
After=backend@%i.service
Wants=backend@%i.service

[Service]
TimeoutStartSec=0
ExecStart=/bin/bash -c /aircloak/air/frontend_start.sh
ExecStop=/aircloak/air/frontend_stop.sh
EnvironmentFile=/etc/environment

[X-Fleet]
Conflicts=frontend@*.service
MachineOf=backend@%i.service