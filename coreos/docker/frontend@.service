[Unit]
Description=Air frontend
After=etcd2.service
After=docker.service
After=air_keys.service
After=router@%i.service
BindsTo=router@%i.service
Requires=etcd2.service
Requires=docker.service
Requires=router@%i.service

[Service]
TimeoutStartSec=0
ExecStart=/aircloak/air/air_service_ctl.sh frontend foreground
ExecStop=/aircloak/air/air_service_ctl.sh frontend stop
EnvironmentFile=/aircloak/air/environment

[X-Fleet]
Conflicts=frontend@*.service
MachineOf=router@%i.service
