{sys, [
  {lib_dirs, ["../apps", "../deps"]},
  {erts, [{mod_cond, derived}, {app_file, strip}]},
  {app_file, strip},
  {rel, "airpub", "1", [
    kernel,
    stdlib,
    sasl,
    crypto,
    inets,
    ssl,
    lager,
    lager_syslog,
    syslog,
    erlang_common,
    airpub
  ]},
  {rel, "start_clean", "", [
    kernel,
    stdlib
  ]},
  {boot_rel, "airpub"},
  {profile, embedded},
  {incl_cond, derived},
  {excl_archive_filters, [".*"]}, %% Do not archive built libs
  {excl_sys_filters, [
    "^bin/(?!start_clean.boot)",
    "^erts.*/bin/(dialyzer|typer)",
    "^erts.*/(doc|info|include|lib|man|src)"
  ]},
  {excl_app_filters, ["\.gitignore"]},
  {app, airpub, [{mod_cond, app}, {incl_cond, include}]}
]}.

{target_dir, "airpub"}.

{overlay, [
  {mkdir, "log/sasl"},
  {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
  {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
  {copy, "airpub/bin/start_clean.boot", "\{\{erts_vsn\}\}/bin/start_clean.boot"},
  {copy, "files/airpub", "bin/airpub"},
  {copy, "files/sys.config", "releases/\{\{rel_vsn\}\}/sys.config"},
  {copy, "files/vm.args", "releases/\{\{rel_vsn\}\}/vm.args"}
]}.
